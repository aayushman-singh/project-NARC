{
  "name": "project-narc",
  "version": "1.0.0",
  "description": "Monorepo for Project NARC containing scraper, frontend, and backend",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "mongodb": "^6.8.1",
    "rollup": "^4.21.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.8",
    "concurrently": "^8.2.2",
    "lerna": "^8.1.8",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "private": true,
  "workspaces": [
    "scraper",
    "frontend",
    "maigret"
  ],
  "scripts": {
    "start:maigret": "cd maigret && node server",
    "start:instagram": "cd scraper/src/ && npx tsx src/Instagram.ts",
    "start:x": "cd scraper/src/ && npx tsx src/X.ts",
    "start:facebook": "cd scraper/src/ && npx tsx src/Facebook.ts",
    "start:all": "npm-run-all --parallel start:frontend start:instagram start:x start:facebook"
  }
}
